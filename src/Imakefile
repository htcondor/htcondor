public:: strip.tar 

strip.tar: stripped
	cd strip_dir; rm -f release.tar; tar -cvf release.tar --owner=root --group=root AllFiles

afs_release.tar:: afs_strip.tar

afs_strip.tar: strip.tar
	cp strip_dir/release.tar $(PUBLIC_D_TARGET)

#if HAS_STATIC
public:: static.tar

afs_release.tar:: afs_static.tar

static.tar: static
	cd static_dir; rm -f release.tar; tar -cvf release.tar --owner=root --group=root AllFiles

afs_static.tar: static.tar
	cp static_dir/release.tar $(PUBLIC_S_TARGET)

#endif 

