all_target(daemon_core.a)

/* Compiling daemon core without -O produces an internal compiler error
	on alpha linux with gcc 2.95.2. I turned on optimization to
	get a different instruction scheduling path to fix it. -psilord
	7/5/01 */
#if IS_LINUX
#if IS_ALPHA
FIX_BROKEN_GCC = -O
#else
FIX_BROKEN_GCC =
#endif
#endif

#if HAS_PURIFY
PURIFY_FLAG = -DHAS_PURIFY
#else
PURIFY_FLAG =
#endif

CFLAGS = $(STD_C_FLAGS) -I$(PCRE_INC)
C_PLUS_FLAGS = $(STD_C_PLUS_FLAGS) $(FIX_BROKEN_GCC) $(PURIFY_FLAG) -I$(PCRE_INC)
LIB = $(STD_LIBS) -I$(PCRE_LIB) -lpcre

OBJ = stdsoap2.o soap_core.o timer_manager.o daemon_core.o daemon_core_main.o \
  daemon_core_instantiate.o condor_ipverify.o condor_perms.o \
  condor_lock_base.o condor_lock_implementation.o condor_lock_file.o \
  condor_lock.o self_monitor.o httpget.o datathread.o \
  self_draining_queue.o

library_target(daemon_core.a,$(OBJ))
c_plus_target(testit,test_daemon_core.o daemon_core.a,$(LIB))
html_target( documentation )

release:: all
stripped:: all
static:: all

stdsoap2.C:
	cp $(GSOAP_INC)/stdsoap2.h ../condor_includes/
	cp $(GSOAP_DIR)/src/stdsoap2.cpp stdsoap2.C


IMPORT_LINKS = ../../config/import_links
import(../condor_util_lib,condor_perms.o)
