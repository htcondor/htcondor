/* Machines that do not have the seteuid call need this particular object file
	to allow proper linkage in libcondorapi.a */
#if !HAS_SETEUID
SETEUID_OBJ = ../condor_util_lib/seteuid.o
#else
SETEUID_OBJ = 
#endif

#if !HAS_SETEGID
